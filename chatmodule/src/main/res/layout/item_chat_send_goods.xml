<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100dp"
    android:layout_margin="@dimen/dimen_30dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dimen_3dp"
    app:cardElevation="@dimen/dimen_3dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp">

        <ImageView
            android:id="@+id/ivSrc"
            android:layout_width="70dp"
            android:layout_height="@dimen/dimen_70dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/wmt_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="2"
            android:text="@string/app_name"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivSrc"
            app:layout_constraintTop_toTopOf="@+id/ivSrc"/>

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lines="2"
            android:text="￥0.00"
            android:textColor="#FF5C61"
            android:textSize="@dimen/dimen_14sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivSrc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivSrc"/>

        <TextView
            android:id="@+id/tvSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_10dp"
            android:background="@drawable/shape_45_all_red"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingTop="@dimen/dimen_3dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingBottom="@dimen/dimen_3dp"
            android:text="发给客服"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
