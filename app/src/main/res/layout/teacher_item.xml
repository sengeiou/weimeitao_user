<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <top.jplayer.baseprolibrary.widgets.polygon.PolygonImageView
        android:id="@+id/im_pic"
        android:layout_width="@dimen/dimen_60dp"
        android:layout_height="@dimen/dimen_60dp"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:poly_vertices="0" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/im_pic"
        android:textColor="@color/color222222"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_job"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_toRightOf="@+id/im_pic"
        android:textColor="@color/color666666"
        android:textSize="@dimen/dimen_11sp" />

    <TextView
        android:id="@+id/tv_good_at_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_job"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/im_pic"
        android:textColor="@color/color666666"
        android:textSize="@dimen/dimen_11sp" />

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_good_at_time"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/im_pic"
        android:textColor="@color/color666666"
        android:textSize="@dimen/dimen_11sp" />

    <ImageView
        android:id="@+id/im_choose"
        android:layout_width="@dimen/dimen_16dp"
        android:layout_height="@dimen/dimen_16dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:src="@mipmap/check_no">

    </ImageView>


</RelativeLayout>