<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <top.jplayer.baseprolibrary.widgets.MapScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amap.api.maps2d.MapView
            android:id="@+id/rc_ext_amap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/rc_ext_location_marker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:background="@drawable/shape_white_press"
            android:drawableStart="@drawable/rc_ext_location_tip"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="15sp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/rc_ext_my_location"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_gravity="end|bottom"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="@dimen/dimen_30dp"
            android:src="@drawable/rc_ext_locator"/>
    </top.jplayer.baseprolibrary.widgets.MapScrollView>
</LinearLayout>