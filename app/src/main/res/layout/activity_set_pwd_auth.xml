<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/viewStatusBarAppointment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--返回-->
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/t_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_35dp"
        android:text="输入验证码"
        android:textColor="@color/color000000"
        android:textSize="@dimen/dimen_24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_1"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="验证码已发送至"
        android:textColor="@color/color666666"
        android:textSize="@dimen/dimen_14sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:text="+86  "
            android:textColor="@color/color666666"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tt_2"
            android:text=""
            android:textColor="@color/color666666"
            android:textSize="@dimen/dimen_14sp" />
    </RelativeLayout>

    <!--获取验证码-->
    <LinearLayout
        android:id="@+id/login_ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/login_et_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_5dp"
            android:layout_weight="2"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:inputType="number"
            android:maxLength="4"
            android:paddingStart="@dimen/dimen_12dp"
            android:singleLine="true"
            android:textColor="@color/color000000"
            android:textColorHint="@color/color999999"
            android:textSize="@dimen/dimen_14sp" />

        <TextView
            android:id="@+id/login_tv_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_weight="4"
            android:background="@drawable/login_btn_code"
            android:gravity="center"
            android:paddingTop="@dimen/dimen_6dp"
            android:paddingBottom="@dimen/dimen_6dp"
            android:text="获取验证码"
            android:textColor="@color/them_pink"
            android:textSize="@dimen/dimen_12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/login_ll_code"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@color/new_lin" />

    <!--密码-->
    <RelativeLayout
        android:id="@+id/login_rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginEnd="@dimen/dimen_40dp">

        <EditText
            android:id="@+id/login_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@null"
            android:hint="设置登陆密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="@dimen/dimen_10dp"
            android:singleLine="true"
            android:textColor="@color/color222222"
            android:textColorHint="@color/color999999"
            android:textSize="@dimen/dimen_14sp" />

        <ImageView
            android:id="@+id/login_show_pwd"
            android:padding="@dimen/dimen_10dp"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:src="@mipmap/in_look" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@color/line" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="密码8~16位，至少含字母/数字/符号两种组合"
        android:textColor="@color/color999999"
        android:textSize="@dimen/dimen_14sp" />

    <TextView
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_80dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@drawable/btn_pink_all"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="@dimen/dimen_16sp" />

    <RelativeLayout
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_marginEnd="@dimen/dimen_40dp"
            android:text="忘记密码"
            android:textColor="@color/color999999"
            android:textSize="@dimen/dimen_16sp" />

    </RelativeLayout>


</LinearLayout>