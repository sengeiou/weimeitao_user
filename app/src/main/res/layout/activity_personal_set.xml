<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePureScrollMode="true">

        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlClassicsSpinnerStyle="FixedBehind"
            app:srlDrawableArrowSize="@dimen/dimen_20dp"
            app:srlDrawableMarginRight="@dimen/dimen_20dp"
            app:srlDrawableProgressSize="@dimen/dimen_20dp"
            app:srlEnableLastTime="true"
            app:srlFinishDuration="100"
            app:srlTextSizeTime="@dimen/dimen_11dp"
            app:srlTextSizeTitle="@dimen/dimen_12dp"
            app:srlTextTimeMarginTop="@dimen/dimen_2dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimen_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="我的头像"/>

                    <top.jplayer.baseprolibrary.widgets.polygon.PolygonImageView
                        android:id="@+id/im_photo"
                        android:layout_width="@dimen/dimen_30dp"
                        android:layout_height="@dimen/dimen_30dp"
                        android:background="@color/white"
                        android:scaleType="centerCrop"
                        android:src="@drawable/wm_avatar"
                        app:poly_vertices="0"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:drawableEnd="@drawable/right_arrow"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:text="昵称"/>

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请输入昵称"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="签名"/>

                    <EditText
                        android:id="@+id/et_qianming"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请输入签名"
                        android:inputType="text"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--肤质-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="肤质"/>

                    <TextView
                        android:id="@+id/tv_fuzhi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请选择肤质"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--性别-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="性别"/>

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请选择性别"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--生日-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="生日"/>

                    <TextView
                        android:id="@+id/tv_birth"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请选择生日"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--地区-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="地区"/>

                    <TextView
                        android:id="@+id/tv_diqu"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请选择地区"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--收货地址-->
                <RelativeLayout
                    android:id="@+id/rlAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:text="收货地址"/>

                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:gravity="end"
                        android:textColor="@color/color222222"
                        android:textSize="@dimen/dimen_16sp"/>


                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_10dp"
                    android:background="@color/line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="预约联系方式"/>

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:gravity="end|center_vertical"
                        android:hint="请输入预约联系方式"
                        android:inputType="phone"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"/>


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_1dp"
                    android:layout_marginLeft="@dimen/dimen_10dp"
                    android:layout_marginRight="@dimen/dimen_10dp"
                    android:background="@color/line"/>
                <!--兴趣标签-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="兴趣标签"/>

                    <TextView
                        android:id="@+id/tv_biaoqian"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:background="@null"
                        android:drawableEnd="@drawable/right_arrow"
                        android:drawablePadding="@dimen/dimen_10dp"
                        android:ellipsize="end"
                        android:gravity="end|center_vertical"
                        android:hint="请选择兴趣标签"
                        android:lines="1"
                        android:textColor="@color/color666"
                        android:textColorHint="@color/color666"
                        android:textSize="@dimen/dimen_14sp"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/tvAddInterest"
                        android:layout_width="@dimen/dimen_50dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="@dimen/dimen_15dp"
                        android:drawableEnd="@drawable/right_arrow"/>
                </LinearLayout>

                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/tagFlow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_10dp"
                    android:layout_marginTop="@dimen/dimen_5dp"/>
            </LinearLayout>

        </ScrollView>

        <com.scwang.smartrefresh.layout.footer.FalsifyFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>