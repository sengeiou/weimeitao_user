<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".personal.activity.PhoneLoginActivity">

    <View
        android:id="@+id/viewStatusBarAppointment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--返回-->
    <RelativeLayout
        android:id="@+id/rl_back"
        android:layout_width="@dimen/dimen_45dp"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_below="@+id/viewStatusBarAppointment">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/back" />
    </RelativeLayout>

    <TextView
        android:id="@+id/login_tv_pwd"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_below="@+id/viewStatusBarAppointment"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:text="密码登录"
        android:textColor="@color/color000000"
        android:textSize="@dimen/dimen_14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_85dp"
        android:text="设置账号密码"
        android:textColor="@color/color000000"
        android:textSize="@dimen/dimen_24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="完成密码设置，发现更美的你"
        android:textColor="@color/color666666"
        android:textSize="@dimen/dimen_14dp" />

    <!--输入手机号-->
    <LinearLayout
        android:id="@+id/set_ll_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_90dp"
        android:layout_marginEnd="@dimen/dimen_40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="+86"
            android:textColor="@color/color000000"
            android:textSize="@dimen/dimen_16sp" />

        <TextView
            android:id="@+id/set_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:gravity="left|center"
            android:textColor="@color/color000000"
            android:textColorHint="@color/color999999"
            android:textSize="@dimen/dimen_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/set_ll_phone"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@color/line" />

    <!--密码-->
    <RelativeLayout
        android:id="@+id/set_rl_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_ll_phone"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_40dp"
        android:layout_marginEnd="@dimen/dimen_40dp">

        <EditText
            android:id="@+id/set_et_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp"
            android:background="@null"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingStart="@dimen/dimen_10dp"
            android:singleLine="true"
            android:textColor="@color/color222222"
            android:textColorHint="@color/color999999"
            android:textSize="@dimen/dimen_14sp" />

        <ImageView
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/set_show_pwd"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/dimen_20dp"
            android:src="@mipmap/in_look" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:layout_below="@+id/set_rl_pwd"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_5dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@color/line" />

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_rl_pwd"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:text="密码8~16位，至少含字母/数字/符号两种组合"
        android:textColor="@color/color999999"
        android:textSize="@dimen/dimen_14sp" />

    <TextView
        android:id="@+id/set_tv_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:layout_below="@+id/tv_1"
        android:layout_marginStart="@dimen/dimen_40dp"
        android:layout_marginTop="@dimen/dimen_60dp"
        android:layout_marginEnd="@dimen/dimen_40dp"
        android:background="@drawable/login_btn_login"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/dimen_16dp" />

</RelativeLayout>
