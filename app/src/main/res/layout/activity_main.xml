<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">


    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/toolbar_shadow"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="@dimen/dimen_21dp"
                android:layout_height="@dimen/dimen_21dp"
                android:src="@drawable/select_main_home"/>

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:text="首页"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llServer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivServer"
                android:layout_width="@dimen/dimen_21dp"
                android:layout_height="@dimen/dimen_21dp"
                android:src="@drawable/select_main_server"/>

            <TextView
                android:id="@+id/tvServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:text="服务"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMsg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMsg"
                android:layout_width="@dimen/dimen_21dp"
                android:layout_height="@dimen/dimen_21dp"
                android:src="@drawable/select_main_msg"/>

            <TextView
                android:id="@+id/tvMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:text="消息"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llMe"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivMe"
                android:layout_width="@dimen/dimen_21dp"
                android:layout_height="@dimen/dimen_21dp"
                android:src="@drawable/select_main_me"/>

            <TextView
                android:id="@+id/tvMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3dp"
                android:text="我的"
                android:textColor="@drawable/selector_text_333_theme"
                android:textSize="@dimen/dimen_12sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
