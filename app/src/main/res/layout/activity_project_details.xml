<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_45dp"
        android:background="#4D000000">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:gravity="center"
            android:text="退出"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_19sp"/>

        <TextView
            android:id="@+id/tv_dongtai"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_toEndOf="@+id/tv_back"
            android:layout_toRightOf="@+id/tv_back"
            android:gravity="center"
            android:text="评价"
            android:textColor="#999999"
            android:textSize="@dimen/dimen_14sp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:background="@drawable/btn_attention"
            android:paddingLeft="@dimen/dimen_12dp"
            android:paddingTop="5dp"
            android:paddingRight="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_5dp"
            android:text="关注"
            android:textColor="#ffffff"
            android:textSize="@dimen/dimen_10sp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!--列表-->
        <com.scwang.smartrefresh.layout.SmartRefreshLayout
            android:id="@+id/smart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srlEnablePureScrollMode="true">
            <!--app:srlEnablePureScrollMode="true"-->

            <com.scwang.smartrefresh.layout.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srlClassicsSpinnerStyle="FixedBehind"
                app:srlDrawableArrowSize="@dimen/dimen_20dp"
                app:srlDrawableMarginRight="@dimen/dimen_20dp"
                app:srlDrawableProgressSize="@dimen/dimen_20dp"
                app:srlEnableLastTime="true"
                app:srlFinishDuration="100"
                app:srlTextSizeTime="@dimen/dimen_11dp"
                app:srlTextSizeTitle="@dimen/dimen_12dp"
                app:srlTextTimeMarginTop="@dimen/dimen_2dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never"
                android:scrollbars="none">

                <!-- 项目详情-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <cn.bingoogolapple.bgabanner.BGABanner
                        android:id="@+id/project_banner"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        app:banner_indicatorGravity="bottom"
                        app:banner_pointAutoPlayAble="true"
                        app:banner_pointContainerBackground="#00000000"
                        app:banner_transitionEffect="alpha"/>

                    <!--内容部分-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/project_banner">

                        <!--项目名称-->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_p_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_20dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:maxLines="2"
                                android:textColor="@color/color222222"
                                android:textSize="@dimen/dimen_15sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tv_shop_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_p_name"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:textColor="@color/color999999"
                                android:textSize="@dimen/dimen_12sp"/>

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/rv_skinS_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_shop_name"
                                android:layout_marginTop="@dimen/dimen_10dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:layout_marginBottom="@dimen/dimen_10dp">

                            </android.support.v7.widget.RecyclerView>

                            <RelativeLayout
                                android:id="@+id/line1"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1dp"
                                android:layout_below="@+id/rv_skinS_list"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginTop="@dimen/dimen_15dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@color/line">

                            </RelativeLayout>

                            <LinearLayout
                                android:id="@+id/rl_anquan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line1"
                                android:layout_marginTop="@dimen/dimen_15dp"
                                android:layout_marginBottom="@dimen/dimen_15dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/dimen_10dp"
                                    android:layout_height="@dimen/dimen_10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:src="@mipmap/green_tick"/>

                                <TextView
                                    android:id="@+id/tv_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:text="安全保障"
                                    android:textColor="@color/them_green"
                                    android:textSize="@dimen/dimen_9dp"/>

                                <ImageView
                                    android:layout_width="@dimen/dimen_10dp"
                                    android:layout_height="@dimen/dimen_10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_20dp"
                                    android:src="@mipmap/green_tick"/>

                                <TextView
                                    android:id="@+id/tv_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:text="随时退"
                                    android:textColor="@color/them_green"
                                    android:textSize="@dimen/dimen_9dp"/>

                                <ImageView
                                    android:layout_width="@dimen/dimen_10dp"
                                    android:layout_height="@dimen/dimen_10dp"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_20dp"
                                    android:src="@mipmap/green_tick"/>

                                <TextView
                                    android:id="@+id/tv_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dimen_5dp"
                                    android:layout_toRightOf="@+id/tv_2"
                                    android:text="护理保障"
                                    android:textColor="@color/them_green"
                                    android:textSize="@dimen/dimen_9dp"/>

                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/anquan_lian"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_1dp"
                                android:layout_below="@+id/rl_anquan"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@color/line"/>

                            <!--地址-->
                            <RelativeLayout
                                android:id="@+id/rl_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/anquan_lian">

                                <ImageView
                                    android:id="@+id/im_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginTop="@dimen/dimen_15dp"
                                    android:layout_marginBottom="@dimen/dimen_15dp"
                                    android:src="@mipmap/address_location"/>

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginTop="@dimen/dimen_13dp"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    android:layout_toRightOf="@+id/im_address"
                                    android:gravity="left"
                                    android:textColor="@color/color222222"
                                    android:textSize="@dimen/dimen_12sp"/>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_1dp"
                                    android:layout_below="@+id/im_address"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    android:background="@color/line"></RelativeLayout>
                            </RelativeLayout>

                            <!--咨询按钮-->
                            <LinearLayout
                                android:id="@+id/ll_zixun"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rl_address"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_chat"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_15dp"
                                    android:layout_marginBottom="@dimen/dimen_15dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="在线咨询"
                                    android:textColor="@color/color222222"
                                    android:textSize="@dimen/dimen_12sp"/>

                                <RelativeLayout
                                    android:layout_width="@dimen/dimen_1dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/dimen_15dp"
                                    android:layout_marginBottom="@dimen/dimen_15dp"
                                    android:background="@color/line"></RelativeLayout>

                                <TextView
                                    android:id="@+id/tv_phone"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/dimen_15dp"
                                    android:layout_marginBottom="@dimen/dimen_15dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="电话咨询"
                                    android:textColor="@color/color222222"
                                    android:textSize="@dimen/dimen_12sp"/>
                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/line3"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dimen_3dp"
                                android:layout_below="@+id/ll_zixun"
                                android:layout_marginLeft="@dimen/dimen_10dp"
                                android:layout_marginRight="@dimen/dimen_10dp"
                                android:background="@color/line"></RelativeLayout>

                            <!--项目信息-->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/line3">

                                <LinearLayout
                                    android:id="@+id/ll_mulu"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/dimen_1dp"
                                    android:orientation="horizontal"
                                    android:visibility="gone">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_15dp"
                                        android:layout_marginTop="@dimen/dimen_15dp"
                                        android:layout_marginBottom="@dimen/dimen_15dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="预约详情"
                                        android:textColor="@color/color222222"
                                        android:textSize="@dimen/dimen_11sp"/>

                                    <RelativeLayout
                                        android:layout_width="@dimen/dimen_1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:layout_marginTop="@dimen/dimen_15dp"
                                        android:layout_marginBottom="@dimen/dimen_15dp"
                                        android:background="@color/line"></RelativeLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_15dp"
                                        android:layout_marginTop="@dimen/dimen_15dp"
                                        android:layout_marginBottom="@dimen/dimen_15dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="预约须知"
                                        android:textColor="@color/color222222"
                                        android:textSize="@dimen/dimen_11sp"/>

                                    <RelativeLayout
                                        android:layout_width="@dimen/dimen_1dp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:layout_marginTop="@dimen/dimen_15dp"
                                        android:layout_marginBottom="@dimen/dimen_15dp"
                                        android:background="@color/line"></RelativeLayout>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_15dp"
                                        android:layout_marginTop="@dimen/dimen_15dp"
                                        android:layout_marginBottom="@dimen/dimen_15dp"
                                        android:layout_weight="1"
                                        android:gravity="center"
                                        android:text="相关内容"
                                        android:textColor="@color/color222222"
                                        android:textSize="@dimen/dimen_11sp"/>
                                </LinearLayout>

                                <RelativeLayout
                                    android:id="@+id/rl_line"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/dimen_1dp"
                                    android:layout_below="@+id/ll_mulu"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    android:background="@color/line"></RelativeLayout>


                                <!--详细内容-->
                                <android.support.v7.widget.CardView
                                    android:id="@+id/rl_xm_xq"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_line"
                                    android:layout_marginLeft="@dimen/dimen_10dp"
                                    android:layout_marginTop="@dimen/dimen_15dp"
                                    android:layout_marginRight="@dimen/dimen_10dp"
                                    app:cardCornerRadius="@dimen/dimen_7dp"
                                    app:cardElevation="@dimen/dimen_5dp">

                                    <RelativeLayout
                                        android:id="@+id/rl_head"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/dimen_25dp"
                                        android:background="@color/line">

                                        <TextView
                                            android:id="@+id/tv_xm_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="@dimen/dimen_10dp"
                                            android:layout_marginTop="@dimen/dimen_5dp"
                                            android:layout_marginBottom="@dimen/dimen_5dp"
                                            android:textColor="@color/color222222"
                                            android:textSize="@dimen/dimen_11sp"/>

                                        <TextView
                                            android:id="@+id/tv_xm_msg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignParentRight="true"
                                            android:layout_marginTop="@dimen/dimen_5dp"
                                            android:layout_marginRight="@dimen/dimen_10dp"
                                            android:layout_marginBottom="@dimen/dimen_5dp"
                                            android:textColor="@color/color999999"
                                            android:textSize="@dimen/dimen_11sp"/>
                                    </RelativeLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/dimen_25dp"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_15dp"
                                                android:layout_weight="2"
                                                android:text="部     位"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_xm_buwei"
                                                android:layout_width="0px"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_15dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_weight="2"
                                                android:text="功     效"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_xm_gx"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_weight="2"
                                                android:text="使用产品"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_xm_cp"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_weight="2"
                                                android:text="配合仪器"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_phyq"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_weight="2"
                                                android:text="服务流程"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_liucheng"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content">

                                            <TextView
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginBottom="@dimen/dimen_10dp"
                                                android:layout_weight="2"
                                                android:text="增值服务"
                                                android:textColor="@color/color999999"
                                                android:textSize="@dimen/dimen_11sp"/>

                                            <TextView
                                                android:id="@+id/tv_zzfw"
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_marginLeft="@dimen/dimen_10dp"
                                                android:layout_marginTop="@dimen/dimen_10dp"
                                                android:layout_marginRight="@dimen/dimen_10dp"
                                                android:layout_weight="10"
                                                android:gravity="left"
                                                android:textColor="@color/color222222"
                                                android:textSize="@dimen/dimen_11sp"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_pic_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_xm_xq"
                                    android:layout_marginTop="@dimen/dimen_5dp"
                                    android:overScrollMode="never">

                                </android.support.v7.widget.RecyclerView>

                                <!--评价-->
                                <RelativeLayout
                                    android:id="@+id/rl_pl"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rv_pic_list"
                                    android:layout_marginTop="@dimen/dimen_20dp">

                                    <TextView
                                        android:id="@+id/tv_typj"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:text="体验评价"
                                        android:textColor="@color/color222222"
                                        android:textSize="@dimen/dimen_16dp"/>

                                    <top.jplayer.baseprolibrary.widgets.polygon.PolygonImageView
                                        android:id="@+id/im_user_pic"
                                        android:layout_width="@dimen/dimen_50dp"
                                        android:layout_height="@dimen/dimen_50dp"
                                        android:layout_below="@+id/tv_typj"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:layout_marginTop="@dimen/dimen_20dp"
                                        app:poly_vertices="0"/>

                                    <TextView
                                        android:id="@+id/tv_user_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tv_typj"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:layout_marginTop="@dimen/dimen_30dp"
                                        android:layout_toRightOf="@+id/im_user_pic"
                                        android:textSize="@dimen/dimen_14sp"
                                        android:textStyle="bold"/>

                                    <TextView
                                        android:id="@+id/tv_user_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignBottom="@+id/tv_user_name"
                                        android:layout_marginLeft="@dimen/dimen_10dp"
                                        android:layout_toRightOf="@+id/tv_user_name"
                                        android:textSize="@dimen/dimen_10sp"/>

