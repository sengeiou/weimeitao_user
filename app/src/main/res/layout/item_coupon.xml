<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_75dp"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@mipmap/youhui_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:text="￥0.00"
            android:textSize="@dimen/dimen_20sp"/>

        <TextView
            android:id="@+id/tv_mk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money"
            android:layout_alignStart="@+id/tv_money"
            android:layout_alignEnd="@+id/tv_money"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            android:text="红包类型"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_10sp"/>

        <View
            android:id="@+id/v_1"
            android:layout_width="@dimen/dimen_1dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:layout_toEndOf="@+id/tv_money"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_toEndOf="@+id/v_1"
            android:ellipsize="end"
            android:lines="1"
            android:text="@string/app_name"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_fw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_toEndOf="@+id/v_1"
            android:ellipsize="end"
            android:gravity="start"
            android:lines="1"
            android:text="适用范围"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_10sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_fw"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_marginEnd="@dimen/dimen_15dp"
            android:layout_toEndOf="@+id/v_1"
            android:ellipsize="end"
            android:lines="1"
            android:text="使用时间"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_10sp"/>
    </RelativeLayout>

</RelativeLayout>