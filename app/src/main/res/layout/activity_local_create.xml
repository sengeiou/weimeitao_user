<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorF3F5F7"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <EditText
                android:textSize="@dimen/dimen_13sp"
                android:hint="请输入收货人姓名"
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:paddingEnd="@dimen/dimen_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话："
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <EditText
                android:textSize="@dimen/dimen_13sp"
                android:hint="请输入收货人电话"
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:inputType="phone"
                android:paddingEnd="@dimen/dimen_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSecLocal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="地区："
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <TextView
                android:id="@+id/tvLocalSecOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="省份  城市   区县"
                android:text=""
                android:textColor="@color/color333"
                android:textColorHint="@color/color999"
                android:textSize="@dimen/dimen_14sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="详细地址："
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <EditText
                android:id="@+id/editDetailLocal"

                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:background="@null"
                android:gravity="center_vertical|end"
                android:hint="街道编号/名称  楼宇地址"
                android:paddingEnd="@dimen/dimen_10dp"
                android:textColorHint="@color/color999"
                android:textSize="@dimen/dimen_13sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子邮箱："
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:hint="效果图施工图等图纸等以电子邮件的形式发送给您"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:paddingRight="@dimen/dimen_10dp"
                android:textColorHint="@color/color999"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_1dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_15dp"
            android:paddingRight="@dimen/dimen_15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="设为默认"
                android:textColor="@color/color333"
                android:textSize="@dimen/dimen_14sp"/>

            <top.jplayer.baseprolibrary.widgets.ShSwitchView
                android:id="@+id/switchView"
                android:layout_width="@dimen/dimen_51dp"
                android:layout_height="@dimen/dimen_35dp"
                app:tintColor="@color/colorFollowRed"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/dp_10"
                android:background="@drawable/shape_send_red"
                android:text="添加地址"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
