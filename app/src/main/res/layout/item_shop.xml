<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp">

        <top.jplayer.baseprolibrary.widgets.polygon.PolygonImageView
            android:id="@+id/im_pic"
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:src="@mipmap/wmt_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:poly_vertices="0" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_toRightOf="@+id/im_pic"
            android:gravity="left"
            android:text="sadasdasdsadsa"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_12sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_toRightOf="@+id/im_pic"
            android:gravity="left"
            android:text="sadsadsa"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_9sp" />

        <TextView
            android:id="@+id/tv_huodong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_address"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_toRightOf="@+id/im_pic"
            android:gravity="left"
            android:text="sadsadsa"
            android:textColor="@color/color222222"
            android:textSize="@dimen/dimen_9sp" />
    </RelativeLayout>

</LinearLayout>